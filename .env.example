# ========================================
# HSS Hospital Specialists
# Environment Variables Configuration
# ========================================

# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Server Configuration
# ========================================

# Port for the Express server (default: 3002)
PORT=3002

# Node environment (development, production, or test)
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================

# SQLite database file location (default: api/contacts.db)
# For production, consider using external database
DATABASE_PATH=api/contacts.db

# Optional: External database connection string
# Uncomment if using PostgreSQL, MySQL, etc.
# DATABASE_URL=postgresql://username:password@host:port/database

# ========================================
# Email Service Configuration (Optional)
# ========================================

# SMTP server for sending email notifications
# Uncomment and configure if you want email notifications on contact form submissions

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# ========================================
# Admin Notifications
# ========================================

# Email address to receive contact form notifications
ADMIN_EMAIL=asimon@hssmedicine.com

# Enable/disable email notifications on new contact submissions
NOTIFY_ON_CONTACT=false

# ========================================
# Security Settings
# ========================================

# Secret key for session management (generate a random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# SESSION_SECRET=your-secret-key-here

# Admin API authentication token (for /api/contacts endpoint)
# Generate a strong random token for production
# ADMIN_API_TOKEN=your-admin-token-here

# ========================================
# CORS Configuration
# ========================================

# Allowed origins for CORS (comma-separated)
# In production, specify your actual domain
CORS_ORIGIN=*

# ========================================
# Rate Limiting
# ========================================

# Maximum requests per time window (for rate limiting)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# Frontend Configuration
# ========================================

# Base URL for API calls (used by frontend JavaScript)
# In production, set to your actual domain
API_BASE_URL=http://localhost:3002

# ========================================
# Analytics (Optional)
# ========================================

# Google Analytics tracking ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# Deployment Platform Settings
# ========================================

# Vercel-specific settings (if deploying to Vercel)
# VERCEL=1
# VERCEL_URL=your-project.vercel.app

# Netlify-specific settings (if deploying to Netlify)
# NETLIFY=1
# URL=https://your-site.netlify.app

# ========================================
# Notes
# ========================================

# 1. Copy this file to .env in the project root
# 2. Update all values with your actual configuration
# 3. Never commit .env to version control
# 4. Keep .env.example updated with new variables (without actual values)
# 5. For production, use secure values and enable appropriate security features
